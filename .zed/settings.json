// Folder-specific settings
//
// For a full list of overridable settings, and general information on folder-specific settings,
// see the documentation: https://zed.dev/docs/configuring-zed#settings-files
{
  "languages": {
    "JavaScript": {
      "format_on_save": "on",
      "prettier": { "use": true }
    },
    "TypeScript": {
      "format_on_save": "on",
      "prettier": { "use": true }
    },
    "Vue": {
      "format_on_save": "on",
      "prettier": { "use": true }
    }
  },
  "lsp": {
    "eslint": {
      "settings": {
        "experimental": {
          "useFlatConfig": true
        },
        "workingDirectory": {
          "mode": "manual",
          "value": "/home/limit/Code/mhd-run/"
        }
      }
    },
    "volar": {
      "enable": true,
      "serverPath": "./node_modules/.bin/vue-language-server"
    }
  },
  "inlay_hints": {
    "enabled": true,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true
  }
}
